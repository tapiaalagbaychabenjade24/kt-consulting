---
import { Image } from 'astro:assets';

// Assets
import KTConsultingLogo from '../assets/kt-consulting.png';
---

<header class='py-5'>
	<nav class='flex justify-between items-center min-max'>
		<div>
			<a href='/'>
				<Image
					src={KTConsultingLogo}
					alt=''
					height={256}
					width={256}
					class='h-14 w-auto'
				/>
			</a>
		</div>

		<ul class='flex max-[1000px]:hidden gap-5'>
			<li>
				<a href='/'>Home</a>
			</li>

			<li>
				<a href='/' class='flex items-center gap-1'
					>About KTC <svg
						xmlns='http://www.w3.org/2000/svg'
						viewBox='0 0 20 20'
						fill='currentColor'
						class='size-5'
					>
						<path
							fill-rule='evenodd'
							d='M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z'
							clip-rule='evenodd'></path>
					</svg>
				</a>
			</li>

			<li>
				<a href='/' class='flex items-center gap-1'
					>Capabilities <svg
						xmlns='http://www.w3.org/2000/svg'
						viewBox='0 0 20 20'
						fill='currentColor'
						class='size-5'
					>
						<path
							fill-rule='evenodd'
							d='M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z'
							clip-rule='evenodd'></path>
					</svg>
				</a>
			</li>

			<li>
				<a href='/' class='flex items-center gap-1'
					>Contracting Vehicles <svg
						xmlns='http://www.w3.org/2000/svg'
						viewBox='0 0 20 20'
						fill='currentColor'
						class='size-5'
					>
						<path
							fill-rule='evenodd'
							d='M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z'
							clip-rule='evenodd'></path>
					</svg>
				</a>
			</li>

			<li>
				<a href='/'>Careers</a>
			</li>

			<li>
				<a href='/'>Contact</a>
			</li>
		</ul>

		<div class='hidden max-[1000px]:block'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				fill='none'
				viewBox='0 0 24 24'
				stroke-width='1.5'
				stroke='currentColor'
				class='size-8 cursor-pointer'
			>
				<path
					stroke-linecap='round'
					stroke-linejoin='round'
					d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
			</svg>
		</div>
	</nav>
</header>

<style>
	ul li a {
		@apply font-medium;
	}
</style>
